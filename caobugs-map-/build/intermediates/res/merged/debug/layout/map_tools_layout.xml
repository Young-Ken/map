<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mapToolsLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_alignParentBottom="true"
    >

    <Button
        android:id="@+id/search_envelope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_envelope_text"
        />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"

        >
        <Button
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button"
            />

        <Button
            android:id="@+id/location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_button_text"
            />

        <Button
            android:id="@+id/draw_farmland"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/draw_farmland_text"
            />

        <Button
            android:id="@+id/draw_farmland_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/draw_farmland_point_text"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>